<h1><%= @cocktail.name %></h1>

<h2>Ingredients</h2>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete do %>
      &times;
    <% end %>
  </li>
<% end %>
</ul>

<h3>Add ingredient</h3>

<%= render 'doses/form',
  cocktail: @cocktail,
  dose: @cocktail.doses.new %>